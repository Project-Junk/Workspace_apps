            <ImageView android:layout_gravity="center" android:id="@id/v9_camera_picker" android:focusable="false" android:layout_width="@dimen/bottom_picker_width" android:layout_height="@dimen/bottom_picker_width" android:src="@drawable/ic_vector_picker" android:scaleType="center" android:layout_centerVertical="true" android:contentDescription="@string/accessibility_camera_picker" android:layout_marginEnd="@dimen/bottom_picker_margin" android:layout_alignParentEnd="true" />
            <ImageView android:layout_gravity="center" android:id="@id/v9_recording_snap" android:background="@drawable/bg_thumbnail_background_full" android:focusable="false" android:visibility="gone" android:layout_width="@dimen/bottom_picker_width" android:layout_height="@dimen/bottom_picker_width" android:scaleType="centerInside" android:layout_centerVertical="true" android:contentDescription="@string/accessibility_video_capture_button" android:layout_marginEnd="@dimen/bottom_picker_margin" android:layout_alignParentEnd="true" />
            <ImageView android:layout_gravity="center" android:id="@id/v9_recording_reverse" android:background="@drawable/bg_thumbnail_background_full" android:focusable="false" android:visibility="gone" android:layout_width="@dimen/bottom_picker_width" android:layout_height="@dimen/bottom_picker_width" android:scaleType="centerInside" android:layout_centerVertical="true" android:contentDescription="@null" android:layout_marginEnd="@dimen/bottom_picker_margin" android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>