            <ProgressBar android:id="@id/v9_post_processing" android:visibility="gone" android:layout_width="@dimen/bottom_snap_progress_width" android:layout_height="@dimen/bottom_snap_progress_width" android:indeterminateDuration="@integer/post_process_duration" android:layout_centerInParent="true" style="?android:progressBarStyleLarge" />
            <ProgressBar android:id="@id/mimoji_create_progress" android:background="@drawable/bg_thumbnail_background_full" android:visibility="gone" android:layout_width="@dimen/bottom_snap_progress_width" android:layout_height="@dimen/bottom_snap_progress_width" android:indeterminateDrawable="@drawable/live_share_progress" android:indeterminateDuration="700" android:layout_centerInParent="true" style="?android:progressBarStyleLarge" />
